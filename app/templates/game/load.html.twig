{% extends 'base.html.twig' %}

{% block title %} - Charger une partie{% endblock %}

{% block body %}

<main class="container">
    <section class="section">
        <div class="is-vcentered has-text-centered">
            <div class="dropdown is-active">
                <div class="dropdown-trigger">
                    <button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
                        <span>Parties sauvegard√©es</span>
                        <span class="icon is-small">
                            <i class="fas fa-angle-down" aria-hidden="true"></i>
                        </span>
                    </button>
                </div>
                {# saved games #}
                <div class="dropdown-menu" id="dropdown-menu" role="menu">
                    <div class="dropdown-content">
                        {% for game in games %}
                            <a href="/game/load/{{game.id}}" class="dropdown-item">
                                {{ game.date|date("m/d/Y") }}
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
    {# displayed if the player chose a saved game #}
    {% if players is defined %} 
    <section class="section">
        <div class="is-vcentered has-text-centered">
            <ol>
                {% for player in players %}
                <li> {{ player.pseudo }} </li>
                {% endfor %}
            </ol>
            <a href="{{ path('game') }}" class="button is-danger is-uppercase">Jouer</a>
        </div>
    </section>
    {% endif %}
</main>
{% endblock %}
