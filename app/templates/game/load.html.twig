{% extends 'base.html.twig' %}

{% block title %} - Charger une partie{% endblock %}

{% block body %}

<div class="container" id="play-container">
    <div class="dropdown is-active is-centered">
        <div class="dropdown-trigger">
            <button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
                <span>Parties sauvegard√©es</span>
                <span class="icon is-small">
                    <i class="fas fa-angle-down" aria-hidden="true"></i>
                </span>
            </button>
        </div>
        {# saved games #}
        <div class="dropdown-menu" id="dropdown-menu" role="menu">
            <div class="dropdown-content">
                {% for game in games %}
                    <a href="/game/load/{{game.id}}" class="dropdown-item">
                        {{ game.date }}
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
    {# displayed if the player chose a saved game #}
    {% if players is defined %} 
        <div class="is-centered">   
            <ol>
                {% for player in players %}
                <li> {{ player.pseudo }} </li>
                {% endfor %}
            </ol>
        </div>
        <div class="is-centered">   
            <a href="{{ path('game') }}" class="button is-danger is-uppercase">Jouer</a>
        </div>
    {% endif %}
</div>
{% endblock %}
